@using AnimaLove.Models
@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Index";

    int count = 1;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">USER'S ROLES</h4>
                

                <div class="table-responsive pt-3">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>

                                <th>
                                    UserName
                                </th>

                                <th>
                                    Email
                                </th>

                                <th>
                                    Role
                                </th>
                                <th>
                                    SETTINGS
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var user in Model)
                            {
                            <tr>
                                <td>
                                    @count
                                </td>

                                <td>
                                    @user.UserName
                                </td>


                                <td>
                                    @user.Email
                                </td>
                                <td>
                                    @if (@User.IsInRole(role:"Admin"))
                                    {
                                        <p>Admin</p>
                                    }
                                    else
                                    {
                                        <p>Member</p>
                                    }
                                </td>

                                <td>
                                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@user.Id" style="color:white">
                                        <i class="mdi  mdi-trash-can"></i>
                                    </a>


                                </td>

                            </tr>
                                count++;
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>