@using AnimaLove.Models
@model IEnumerable<Pet>
@{
    ViewData["Title"] = "Index";

    int count = 1;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Pets</h4>
                <a class="btn btn-success" asp-action="Create">
                    CREATE NEW ADOPTION ANNOUNCEMENT
                </a>

                <div class="table-responsive pt-3">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                     Image
                                </th>
                                <th>
                                    Name
                                </th>

                                <th>
                                     Description
                                </th>
                                <th>
                                    SETTINGS
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var pet in Model)
                            {
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    <img src="~/assets/img/@pet.Image" style="border-radius:0px; width:120px; height:90px">
                                </td>
                                <td>
                                    @pet.Name
                                </td>

                                <td>
                                    @pet.Description
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-primary" asp-action="Delete" asp-route-id="@pet.Id" style="color:white;">
                                       ADOPTED
                                    </a>

                                    <a class="btn btn-sm btn-warning" asp-action="Update" asp-route-id="@pet.Id" style="color:white;">
                                      UPDATE  
                                    </a>
                                </td>

                            </tr>
                                count++;
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>