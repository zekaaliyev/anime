@using AnimaLove.Models
@model IEnumerable<Gallery>
@{
    ViewData["Title"] = "Index";

    int count = 1;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Gallery</h4>
                <a class="btn btn-success" asp-action="Create">CREATE NEW GALLERY ITEM</a>

                <div class="table-responsive pt-3">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    SETTINGS
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <img src="~/assets/img/@item.Image" style="border-radius:0px; width:120px; height:90px">
                                    </td>

                                    <td>
                                        <a class="btn  btn-danger" asp-action="Delete" asp-route-id="@item.Id" style="color:white;">
                                            <i class="mdi mdi-delete-forever"></i>
                                        </a>

                                     
                                    </td>

                                </tr>
                                count++;
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>