@using AnimaLove.Models
@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Index";

    int count = 1;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Users</h4>
                <a class="btn btn-success" asp-action="Create">
                    CREATE NEW USER
                </a>

                <div class="table-responsive pt-3">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    UserName
                                </th>
                                <th>
                                    FullName
                                </th>
                                <th>
                                    Email
                                </th>

                                <th>
                                    Description
                                </th>
                                <th>
                                    SETTINGS
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var user in Model)
                            {
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    <img src="~/assets/img/@user.ProfileImage" alt="profile-image" style="border-radius:0px; width:90px; height:90px">
                                </td>
                                <td>
                                    @user.UserName
                                </td>

                                <td>
                                    @user.FullName
                                </td>
                                <td>
                                    @user.Email
                                </td>
                                <td>
                                    @user.Description
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@user.Id" style="color:white">
                                        <i class="mdi  mdi-trash-can"></i>
                                    </a>

                                   
                                </td>

                            </tr>
                                count++;
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>