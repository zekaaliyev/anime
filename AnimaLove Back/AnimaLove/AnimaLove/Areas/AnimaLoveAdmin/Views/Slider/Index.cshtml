@using AnimaLove.Models
@model IEnumerable<Slide>
@{
    ViewData["Title"] = "Index";

    int count = 1;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slides</h4>
                <a class="btn btn-success" asp-action="Create">CREATE NEW SLIDER</a>

                <div class="table-responsive pt-3">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                  Image
                                </th>
                                <th>
                                    SETTINGS
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var slide in Model)
                            {
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                      <img src="~/assets/img/@slide.Image" style="border-radius:0px; width:120px; height:90px">
                                    </td>

                                    <td>
                                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@slide.Id">
                                            <i class="mdi mdi-delete-forever"></i>
                                        </a>

                                        <a class="btn btn-sm btn-warning" asp-action="Update" asp-route-id="@slide.Id">
                                            <i class="mdi mdi-lead-pencil"></i>
                                        </a>
                                    </td>

                                </tr>
                                count++;
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>